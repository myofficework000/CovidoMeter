                        android:padding="13dp"
                        android:text="Review"
                        android:textAllCaps="true"
                        android:textColor="@color/lightgrey"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!--Bootom Cards with sections-->
